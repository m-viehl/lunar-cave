{
    "name": "lunar-cave",
    "description": "Lunar Cave Game",
    "author": "Max Viehl",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev:frontend": "bunx --bun vite",
        "build:frontend": "bunx --bun vite build",
        "build:frontend:docker": "vite build",

        "dev:backend": "mkdir -p dev-data ; DATA_DIR='dev-data' bun --watch src/backend/main.ts",
        "build:backend": "esbuild src/backend/main.ts --bundle --platform=node --target=node18 --outfile=dist_backend/backend.js",
        
        "preview": "bun run build:frontend; bun run build:backend; DATA_DIR='dev-data' STATIC_DIR='dist_frontend' bun dist_backend/backend.js",
    },
    "dependencies": {
        "@fastify/static": "^8.3.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "esbuild": "^0.25.12",
        "fastify": "^5.6.1",
        "vite": "^7.1.11",
        "vue": "^3.5.22",
        "@vue/tsconfig": "^0.8.1"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^22.18.11",
        "typescript": "~5.9.0",
        "vite-plugin-vue-devtools": "^8.0.3",
        "vue-tsc": "^3.1.1"
    }
}